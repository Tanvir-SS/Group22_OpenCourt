<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.main.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Email field (kept, renamed from username) -->
        <LinearLayout
            android:id="@+id/layoutSettingsEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/email_hint"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress" />

                <!-- Removed clear (x) icon -->

            </RelativeLayout>
        </LinearLayout>

        <!-- Small clickable highlighted 'Change email' text -->
        <TextView
            android:id="@+id/textChangeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_email"
            android:textColor="@color/oc_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"
            android:contentDescription="@string/change_email" />

        <!-- Removed favorite location and other settings blocks -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/changeEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:text="Save" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/quantum_grey"
                android:text="Cancel" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSignOut"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/sign_out"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/oc_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
