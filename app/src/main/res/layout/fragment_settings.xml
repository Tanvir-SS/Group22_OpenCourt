<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.main.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/layoutSettingsUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/username_hint"
                    android:paddingStart="0dp"
                    android:paddingEnd="32dp"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />
                <ImageView
                    android:id="@+id/clearUsername"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cancel_outlined"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/clear"
                    app:tint="@color/oc_icon_tint"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSettingsFavLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextFavLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/address_hint"
                    android:paddingStart="0dp"
                    android:paddingEnd="32dp"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="16sp"
                    android:inputType="textPostalAddress"
                    android:autofillHints="postalAddress" />
                <ImageView
                    android:id="@+id/clearFavLocation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cancel_outlined"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/clear"
                    app:tint="@color/oc_icon_tint"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSettingsOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_settings"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextOtherSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/other_settings_hint"
                    android:paddingStart="0dp"
                    android:paddingEnd="32dp"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:autofillHints="username" />
                <ImageView
                    android:id="@+id/clearOtherSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cancel_outlined"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/clear"
                    app:tint="@color/oc_icon_tint"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonSaveSettings"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/oc_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
