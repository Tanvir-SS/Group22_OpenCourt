<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detail_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/check_in_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Edit Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/court_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SFU Tennis Court (4)"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/court_icon_type"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="Court Type"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_tennis"
                    />

                <Button
                    android:id="@+id/edit_court_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Court"
                    android:backgroundTint="@color/purple_500"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Address -->
            <TextView
                android:id="@+id/court_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address, Example Street, Burnaby BC"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Last Verified -->
            <TextView
                android:id="@+id/last_verified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Verified: 10 min ago"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map_fragment_lite"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                map:liteMode="true" />


            <!-- Weather -->
            <TextView
                android:id="@+id/weather_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/weather_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="—"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/weather_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Amenities -->
            <TextView
                android:id="@+id/amenities_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amenities"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/amenities_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lights · Outdoor · Washroom · Accessibility"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Courts List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/courts_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:background="#FFF7FF"
                android:nestedScrollingEnabled="true"
                android:scrollbars="none"
                tools:listitem="@layout/item_court_status" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/check_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check In"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
