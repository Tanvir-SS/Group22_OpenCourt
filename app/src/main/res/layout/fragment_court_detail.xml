<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detail_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/check_in_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Edit Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/courtdetail_type_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:contentDescription="Court Type"
                    android:src="@drawable/ic_tennis_ball"
                    app:layout_constraintStart_toEndOf="@id/court_info_layout"
                    app:layout_constraintTop_toBottomOf="@id/court_distance_text"/>

                <TextView
                    android:id="@+id/court_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SFU Tennis Court (4)"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/edit_court_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Court"
                    android:backgroundTint="@color/purple_500"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Address -->
            <TextView
                android:id="@+id/court_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address, Example Street, Burnaby BC"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Last Verified -->
            <TextView
                android:id="@+id/last_verified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Verified: 10 min ago"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <!-- Map Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/map_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#DDDDDD" />
            </androidx.cardview.widget.CardView>

            <!-- Amenities -->
            <TextView
                android:id="@+id/amenities_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amenities"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/amenities_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lights · Outdoor · Washroom · Accessibility"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Courts List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="14dp"
                android:layout_marginTop="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/courts_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EBEBEB"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="none"
                    tools:listitem="@layout/item_court_status" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/check_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check In / Out"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
