<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/detail_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Edit Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/court_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SFU Tennis Court (4)"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/edit_court_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Court"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Address -->
            <TextView
                android:id="@+id/court_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address, Example Street, Burnaby BC"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Last Verified -->
            <TextView
                android:id="@+id/last_verified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Verified: 10 min ago"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <!-- Map Image -->
            <ImageView
                android:id="@+id/map_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:background="#DDDDDD" />

            <!-- Amenities -->
            <TextView
                android:id="@+id/amenities_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amenities"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/amenities_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lights · Outdoor · Washroom · Accessibility"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Courts List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/courts_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#FFF7FF"
                tools:listitem="@layout/item_court_status"
                android:scrollbars="none" />

            <!-- Check In button at the end of the scrollable content -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/check_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
