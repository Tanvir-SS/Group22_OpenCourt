<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.main.AddCourtFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/layoutPhotoSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:paddingBottom="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imageViewCourtPhoto"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/example_tennis_court"
                android:background="@color/oc_card_light"
                android:layout_marginEnd="24dp"
                android:contentDescription="@string/court_photo"
                android:visibility="gone"
                tools:visibility="visible"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonAddPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/oc_primary"
                    android:text="@string/add_photo"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/buttonRemovePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/quantum_grey"
                    android:text="Remove Photo"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textInputSectionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/court_details"
            android:textStyle="bold"
            android:textColor="@color/oc_text_primary"
            android:textSize="14sp"
             />

        <LinearLayout
            android:id="@+id/layoutCourtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card_light"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/court_name"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextCourtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/court_name_hint"
                    android:paddingStart="0dp"
                    android:paddingEnd="32dp"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:autofillHints="name" />

                <ImageView
                    android:id="@+id/clearCourtName"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cancel_outlined"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/clear"
                    app:tint="@color/oc_icon_tint"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCourtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card_light"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/court_type"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinnerCourtType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/court_type_options"
                    android:paddingStart="0dp"
                    android:layout_marginStart="-8dp"
                    android:layout_marginEnd="-12dp"
                     />

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card_light"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/address_hint"
                    android:paddingStart="0dp"
                    android:paddingEnd="32dp"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="16sp"
                    android:inputType="textPostalAddress"
                    android:autofillHints="postalAddress" />
                <ImageView
                    android:id="@+id/clearAddress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cancel_outlined"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/clear"
                    app:tint="@color/oc_icon_tint"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- Number of Courts -->
        <LinearLayout
            android:id="@+id/layoutNumCourts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/oc_card_light"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_courts"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextNumCourts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/num_courts_hint"
                    android:inputType="number"
                    android:paddingStart="0dp"
                    android:paddingEnd="32dp"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="16sp"
                    android:autofillHints="username" />
                <ImageView
                    android:id="@+id/clearNumCourts"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cancel_outlined"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/clear"
                    app:tint="@color/oc_icon_tint"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amenities"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"

                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/oc_card_light"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lights"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/checkboxLights"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/oc_border_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/indoor"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/checkboxIndoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/oc_border_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/washroom"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/checkboxWashroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/oc_border_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/accessibility"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/checkboxAccessibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Type-specific amenities section -->
        <LinearLayout
            android:id="@+id/layoutTypeSpecific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layoutTennisAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tennis_options"
                    android:textStyle="bold"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/oc_card_light"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/practice_wall"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkboxPracticeWall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBasketballAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basketball_options"
                    android:textStyle="bold"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/oc_card_light"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nets"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkboxNets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonApply"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/oc_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
