<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true"
    tools:context=".ui.main.AddCourtFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title and Edit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/court_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SFU Tennis Court (4)"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/court_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address, Example Street, Burnaby BC"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Last Verified -->
        <TextView
            android:id="@+id/last_verified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Verified: 10 min ago"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amenities"
                android:textStyle="bold"
                android:textColor="@color/oc_text_primary"

                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/oc_card_light"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lights"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/edit_checkboxLights"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/oc_border_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/indoor"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/edit_checkboxIndoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/oc_border_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/washroom"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/edit_checkboxWashroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/oc_border_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/accessibility"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />
                    <CheckBox
                        android:id="@+id/edit_checkboxAccessibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Type-specific amenities section -->
        <LinearLayout
            android:id="@+id/edit_layoutTypeSpecific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/edit_layoutTennisAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tennis_options"
                    android:textStyle="bold"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/oc_card_light"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/practice_wall"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/edit_checkboxPracticeWall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_layoutBasketballAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basketball_options"
                    android:textStyle="bold"
                    android:textColor="@color/oc_text_primary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/oc_card_light"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nets"
                        android:textColor="@color/oc_text_primary"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/edit_checkboxNets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/oc_primary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/edit_buttonApply"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="Apply Changes"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/oc_primary"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
