<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Thin vertical bar at the very left edge, height matches parent, not affected by padding -->
    <androidx.cardview.widget.CardView
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|top"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="5dp">

        <View
            android:id="@+id/vertical_color_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500" />

    </androidx.cardview.widget.CardView>

    <!-- Main content with padding, inside a ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/court_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/example_tennis_court"/>

        <LinearLayout
            android:id="@+id/court_info_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/court_distance_text"
            app:layout_constraintStart_toEndOf="@+id/court_image_view"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/court_name_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Court 1"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/court_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="0dp"

                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="14sp"
                android:text="Address Example Street" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/court_city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:visibility="gone"
                android:text="Vancouver BC" />

        </LinearLayout>

        <TextView
            android:id="@+id/court_distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="0.1km"
            app:layout_constraintEnd_toStartOf="@+id/arrow_right_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/court_type_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:contentDescription="Court Type"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_tennis_ball"
            app:layout_constraintStart_toEndOf="@id/court_info_layout"
            app:layout_constraintTop_toBottomOf="@id/court_distance_text"/>

        <ImageView
            android:id="@+id/favourite_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:contentDescription="Court Type"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_heart"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/court_type_icon"
            app:layout_constraintTop_toBottomOf="@id/court_distance_text"/>

        <TextView
            android:id="@+id/available_courts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:text="@string/court_availability"
            app:layout_constraintStart_toStartOf="@id/court_distance_text"
            app:layout_constraintBottom_toBottomOf="@id/court_info_layout" />

        <ImageView
            android:id="@+id/arrow_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_right"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
