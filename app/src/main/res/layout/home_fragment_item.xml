<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">





    <ImageView
        android:id="@+id/court_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/example_tennis_court"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/court_distance_text"
        app:layout_constraintStart_toEndOf="@+id/court_image_view"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/court_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Court 1"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/court_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Address Example Street" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/court_city_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Vancouver BC" />

    </LinearLayout>


    <TextView
        android:id="@+id/court_distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="0.1km"
        app:layout_constraintEnd_toStartOf="@+id/arrow_right_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_right"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
