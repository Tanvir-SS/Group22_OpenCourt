<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Enter an address..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Search icon"
            android:src="@drawable/search_filled"
            app:tint="#666666" />
    </LinearLayout>

    <!-- Map Container  -->

    <!-- map type spinner -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners_background"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/map_type_spinner"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:popupBackground="@drawable/spinner_popup_background"
        android:background="@drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- top right corner of map_container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners_background"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="13dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintEnd_toEndOf="@id/map_container">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/map_checkbox_tennis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tennis"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            app:buttonTint="@color/white" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/map_checkbox_basketball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basketball"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            app:buttonTint="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
