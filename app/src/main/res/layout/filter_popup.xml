<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners_background"
    android:backgroundTint="@color/purple_500"
    android:padding="8dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_tennis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tennis"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/white"
        app:buttonTint="@color/white" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_basketball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basketball"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/white"
        app:buttonTint="@color/white" />

    <!-- Thin white bar before slider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Distance slider label -->
    <TextView
        android:id="@+id/distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance within"
        android:textColor="@color/white"
        android:layout_marginTop="4dp" />

    <!-- Distance slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/distance_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="4"
        android:stepSize="1"
        app:trackColor="@color/white"
        app:thumbColor="@color/white"
        app:haloColor="@color/white"
        app:tickColor="@color/white"
        app:labelBehavior="gone" />

    <!-- Selected distance display -->
    <TextView
        android:id="@+id/distance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 km"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal" />

    <!-- Thin white bar after slider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Available courts only checkbox -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available courts only"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/white"
        app:buttonTint="@color/white"
        android:layout_marginTop="8dp" />

</LinearLayout>
